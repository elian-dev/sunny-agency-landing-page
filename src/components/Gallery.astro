<style lang='scss'>
  .gallery {
    scroll-snap-align: start;

    display: grid;
    grid-template-columns: 1fr 1fr;

    @media screen and (min-width: 768px) {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>
