<section class='gallery'>
  <Picture
    className='gallery-item'
    src='/assets/images/gallery/image-gallery-milkbottles.jpg'
    alt='Milkbottles in a blue sky'
  />
  <Picture
    className='gallery-item'
    src='/assets/images/gallery/image-gallery-orange.jpg'
    alt='Milkbottles in a blue sky'
  />
  <Picture
    className='gallery-item'
    src='/assets/images/gallery/image-gallery-cone.jpg'
    alt='Milkbottles in a blue sky'
  />
  <Picture
    className='gallery-item'
    src='/assets/images/gallery/image-gallery-sugar-cubes.jpg'
    alt='Milkbottles in a blue sky'
  />
